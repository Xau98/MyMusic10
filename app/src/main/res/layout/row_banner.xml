<?xml version="1.0" encoding="utf-8"?>


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btPlaybanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:padding="10dp"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="@+id/imagebackgroundbanner"
            app:layout_constraintEnd_toEndOf="@+id/imagebackgroundbanner" />

        <ImageView
            android:id="@+id/imagebackgroundbanner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameSongerBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="24dp"
            android:text="Name Songer"
            app:layout_constraintBottom_toBottomOf="@+id/imagebackgroundbanner"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/nameSongBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="8dp"
            android:text="Name Song"
            app:layout_constraintBottom_toTopOf="@+id/nameSongerBanner"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
